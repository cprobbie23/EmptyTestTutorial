@model Spike_TESTS.Controllers.HomeViewModel

@{
    ViewBag.Title = "Home Page";
}

<div class="jumbotron">
    <h1>TESTS!!!!</h1>
    <p class="lead">Let's see how we are going to test this...</p>
</div>

<div class="row">
    <div class="col-md-4">
        @if (Model != null && Model.Users != null && Model.Users.Any())
        {
            <table class="table">
                <tr>
                    <th>First Name</th>
                    <th>Last Name</th>
                    <th>Address</th>
                    <th>Status</th>
                    @*<th>Save</th>*@
                </tr>
                @foreach (var user in Model.Users)
                {
                    <tr>
                        <td>@user.FirstName</td>
                        <td>@user.LastName</td>
                        <td>@user.Address</td>
                        <td>@user.Status</td>
                        @*<td>@Html.Action("Save", "Home")</td>*@
                    </tr>
                }
            </table>

             using (Html.BeginForm("Save", "Home", FormMethod.Post))
             {
                 <div class="form-group">
                     <label for="FirstName">First Name</label>
                     @Html.TextBoxFor(m => m.FirstName, new { @class = "form-control" })
                 </div>
                 <div class="form-group">
                     <label for="LastName">Last Name</label>
                     @Html.TextBoxFor(m => m.FirstName, new { @class = "form-control" })
                 </div>
                 <div class="form-group">
                     <label for="Address">Address</label>
                     @Html.TextBoxFor(m => m.FirstName, new { @class = "form-control" })
                 </div>
        
                
                 <input type="submit" class="btn btn-default" value="Save User" />
             }
        }
        
        @using (Html.BeginForm("Save", "Home", FormMethod.Post))
        {
        <div class="form-group">
            <label for="FirstName">First Name</label>
            @Html.TextBoxFor(m => m.FirstName, new { @class = "form-control" })
        </div>
        <div class="form-group">
            <label for="LastName">Last Name</label>
            @Html.TextBoxFor(m => m.LastName, new { @class = "form-control" })
        </div>
        <div class="form-group">
            <label for="Address">Address</label>
            @Html.TextBoxFor(m => m.Address, new { @class = "form-control" })
        </div>
        
                
        <input type="submit" class="btn btn-default" value="Save User" />
        }
        
    </div>
</div>