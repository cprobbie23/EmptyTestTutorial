@model Spike_TESTS.Controllers.HomeViewModel

@{
    ViewBag.Title = "Home Page";
}

<div class="jumbotron">
    <h1>TESTS!!!!</h1>
    <p class="lead">Let's see how we are going to test this...</p>
</div>

<div class="row">
    <div class="col-md-4">
        @if (Model != null && Model.Users != null && Model.Users.Any())
        {
            <table class="table">
                <tr>
                    <th>First Name</th>
                    <th>Last Name</th>
                    <th>Address</th>
                    <th>Status</th>
                    @*<th>Save</th>*@
                </tr>
                @foreach (var user in Model.Users)
                {
                    <tr>
                        <td>@user.FirstName</td>
                        <td>@user.LastName</td>
                        <td>@user.Address</td>
                        <td>@user.Status</td>
                        @*<td>@Html.Action("Save", "Home")</td>*@
                    </tr>
                }
            </table>
        }
    </div>
</div>